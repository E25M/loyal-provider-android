<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel"
                type="pet.loyal.provider.view.editpetcard.EditPetCardViewModel"/>
        <import type="pet.loyal.provider.util.AvatarImageViewBindingUtil" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main_color">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_home_screen"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:navigationIcon="@drawable/ic_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="32dp">

            <TextView
                    android:id="@+id/textView4"
                    style="@style/TitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_welcome"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:onClick="onLogoClick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imageView4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:logo="@{viewModel.logo}" />

            <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="32dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="24dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onLogout"
                    android:scaleType="centerInside"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_logout" />

            <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="32dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="35dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onBackPressedEditCard"
                    android:scaleType="centerInside"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_home" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:minHeight="168dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="0dp"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintTop_toBottomOf="@id/toolbar_home_screen"
                app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_pet_details"
                    android:paddingBottom="16sp">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        app:setSrcDrawable="@{viewModel.livePhaseColorDrawable}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <cn.carbs.android.avatarimageview.library.AvatarImageView
                        android:id="@+id/imgPetProfile"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="16dp"
                        app:setPetImage="@{viewModel.livePetImage}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="@dimen/margin_8"
                        android:id="@+id/txtPetName"
                        android:ellipsize="end"
                        android:maxLines="2"
                        style="@style/textFieldBlackFont16SP"
                        android:text="@{viewModel.livePetName}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imgPetProfile"
                        app:layout_constraintTop_toTopOf="@id/imgPetProfile" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:id="@+id/txtPetDetails"
                        style="@style/textFieldGrayFont10SP"
                        android:text="@{viewModel.liveBreedSpecies}"
                        app:layout_constraintStart_toEndOf="@id/imgPetProfile"
                        app:layout_constraintTop_toBottomOf="@id/txtPetName" />

                <TextView android:id="@+id/txtHospitalType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:gravity="center"
                        android:text="@{viewModel.livePhase}"
                        android:paddingBottom="4dp"
                        android:layout_marginStart="16dp"
                        app:setDrawable="@{viewModel.liveColor}"
                        style="@style/AppointmentTypeWellnessVisit"
                        app:layout_constraintTop_toBottomOf="@id/txtPetDetails"
                        app:layout_constraintStart_toEndOf="@id/imgPetProfile"/>

                <LinearLayout android:id="@+id/layoutPrevious"
                        android:layout_width="0dp"
                        android:layout_height="62dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="@dimen/margin_8"
                        android:orientation="vertical"
                        android:background="@color/bg_state_change_button_green"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/txtHospitalType"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/layoutNext">

                    <ImageView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_previous"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font_color_white"
                            android:text="Back"/>
                </LinearLayout>

                <LinearLayout android:id="@+id/layoutNext"
                        android:layout_width="0dp"
                        android:layout_height="62dp"
                        android:gravity="center"
                        android:background="@color/bg_state_change_button_green"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/layoutPrevious"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_next"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font_color_white"
                            android:text="Phase Change"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="678dp"
            android:layout_height="0dp"
            app:cardCornerRadius="0dp"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_home_screen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_messages"
                android:padding="@dimen/margin_8">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewMessages"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scrollbars="vertical"
                    android:scrollbarSize="15dp"
                    android:fadeScrollbars="false"
                    android:scrollbarStyle="outsideInset"
                    android:layout_marginBottom="@dimen/margin_8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/btnCancel"
                    tools:listitem="@layout/layout_edit_patient_card_item"/>

            <Button android:id="@+id/btnUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_update"
                    style="@style/AppTheme.ButtonBlue"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <Button android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_cancel"
                    style="@style/AppTheme.ButtonBlack"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@id/recyclerViewMessages"
                    app:layout_constraintTop_toTopOf="@id/btnUpdate"
                    app:layout_constraintEnd_toStartOf="@id/btnUpdate"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressbar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="@{viewModel.liveProgressDialog}"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView android:id="@+id/txtProgressPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_large"
                    android:textColor="@color/btn_color_blue"
                    android:text="@{viewModel.livePercentage}"
                    android:visibility="@{viewModel.liveProgressPercentage}"
                    app:layout_constraintTop_toBottomOf="@id/progressbar"
                    app:layout_constraintStart_toStartOf="@id/progressbar"
                    app:layout_constraintEnd_toEndOf="@id/progressbar"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
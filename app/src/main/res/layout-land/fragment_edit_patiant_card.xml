<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel"
                type="pet.loyal.provider.view.editpetcard.EditPetCardViewModel"/>
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_8"
        android:background="@color/bg_main_color">

        <androidx.cardview.widget.CardView
                android:layout_width="262dp"
                android:layout_height="190dp"
                android:background="@drawable/bg_pet_details"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="16sp">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="4dp"
                        android:src="@drawable/bg_edit_patient_card_deco"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                <cn.carbs.android.avatarimageview.library.AvatarImageView
                        android:id="@+id/imgPetProfile"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/img_pet_sample"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/txtPetName"
                        style="@style/textFieldBlackFont16SP"
                        android:text="Fiona, Devis"
                        app:layout_constraintStart_toEndOf="@id/imgPetProfile"
                        app:layout_constraintTop_toTopOf="@id/imgPetProfile" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:id="@+id/txtPetDetails"
                        style="@style/textFieldGrayFont10SP"
                        android:text="Equidoe, Pony\nFemale"
                        app:layout_constraintStart_toEndOf="@id/imgPetProfile"
                        app:layout_constraintTop_toBottomOf="@id/txtPetName" />

                <TextView android:id="@+id/txtHospitalType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/bg_general"
                        style="@style/AppointmentTypeWellnessVisit"
                        app:layout_constraintTop_toBottomOf="@id/txtPetDetails"
                        app:layout_constraintStart_toEndOf="@id/imgPetProfile"/>

                <LinearLayout android:id="@+id/layoutPrevious"
                        android:layout_width="0dp"
                        android:layout_height="62dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="vertical"
                        android:background="@color/bg_state_change_button"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/layoutNext">

                    <ImageView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_previous"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font_color_white"
                            android:text="Previous Stage"/>
                </LinearLayout>

                <LinearLayout android:id="@+id/layoutNext"
                        android:layout_width="0dp"
                        android:layout_height="62dp"
                        android:gravity="center"
                        android:background="@color/bg_state_change_button"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/layoutPrevious"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_next"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font_color_white"
                            android:text="Next Stage"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="678dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_pet_details"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_8">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewMessages"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/margin_8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/btnCancel"
                    tools:listitem="@layout/layout_edit_patient_card_item"/>

            <Button android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_update"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintTop_toBottomOf="@id/recyclerViewMessages"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <Button android:id="@+id/btnUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_cancel"
                    style="@style/AppTheme.ButtonBlack"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="@id/btnCancel"
                    app:layout_constraintEnd_toStartOf="@id/btnCancel"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
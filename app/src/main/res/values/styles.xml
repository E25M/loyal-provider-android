<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/font_color_blue</item>
    </style>

    <!--blue colored app theme-->
    <style name="AppThemeBlue" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDarkBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorPrimaryDarkBlue</item>
    </style>

    <style name="TextViewStylePetName">
        <item name="android:textColor">@color/font_color_blue</item>
        <item name="android:textSize">@dimen/font_size_extra_extra_small</item>
    </style>

    <style name="ToolBarMain">
        <item name="android:background">@color/colorPrimaryBlue</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--style_view_header-->
    <style name="TitleText">
        <item name="android:textColor">@color/font_color_white</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SelfInviteTextView">
        <item name="android:textColor">@color/font_color_dark</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SelfInviteDescriptionTextView">
        <item name="android:textColor">@color/font_color_gray_1</item>
        <item name="android:textSize">@dimen/font_size_extra_small</item>
    </style>

    <!--outlined text view-->
    <style name="boxedTextFieldGrey" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_text_stroke_color_grey</item>
        <item name="android:colorControlActivated">@color/font_color_light_grey</item>
        <item name="android:textColorHint">@color/font_color_light_grey</item>
        <item name="android:textColor">@color/font_color_view_header</item>
        <item name="hintTextAppearance">@style/TextInputLayoutTextAppearance</item>
    </style>

    <style name="boxedTextFieldGrey.WhiteBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/font_color_light_grey</item>
        <item name="android:colorControlActivated">@color/font_color_light_grey</item>
        <item name="android:textColorHint">@color/font_color_light_grey</item>
        <item name="boxBackgroundColor">@android:color/white</item>
    </style>

    <style name="TextFieldGrey" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:colorPrimary">@color/bg_color_gray_3</item>
<!--        <item name="boxBackgroundColor">@color/colorPrimaryDarkBlue</item>-->
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/bg_color_gray_3</item>
        <item name="android:colorControlActivated">@color/font_color_light_grey</item>
        <item name="android:colorControlHighlight">@color/font_color_light_grey</item>
        <item name="android:textColorHint">@color/font_color_light_grey</item>
    </style>

    <style name="TextInputLayoutTextAppearance" parent="TextAppearance.AppCompat">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/font_color_light_grey</item>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="pet.loyal.provider">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
            android:name=".LoyalProviderApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_loyal"
            android:label="@string/app_name"
            android:largeHeap="true"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:networkSecurityConfig="@xml/network_security_config"
            tools:ignore="GoogleAppIndexingWarning">

        <activity
                android:name=".view.home.HomeScreen"
                android:screenOrientation="landscape"
                android:theme="@style/AppThemeBlue" />
        <activity
                android:name=".view.login.LoginActivity"
                android:theme="@style/AppThemeDark"
                android:screenOrientation="landscape" />

        <service android:name=".services.DownloadService" />
        <activity
                android:name=".view.splash.SplashActivity"
                android:launchMode="singleTask"
                android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
                android:name="io.fabric.ApiKey"
                android:value="480b731947cac89a8ce7d8a8641550cad1faecdd" />
        <meta-data
                android:name="CLOUDINARY_URL"
                android:value="@string/cloudinary_username"/>
        <meta-data
                android:name="io.fabric.ApiKey"
                android:value="480b731947cac89a8ce7d8a8641550cad1faecdd" />

        <service android:name=".fcm.ProviderMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <provider
                android:name="androidx.core.content.FileProvider"
                android:authorities="${applicationId}.provider"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>